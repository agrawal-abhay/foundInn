<% layout("/layouts/boilerPlate.ejs") %>
<body>
    <div class="row">
        <div class="col-md-8 offset-2">
            <h3>Create a new Listing</h3>
            <form method="post" action="/listings" class="needs-validation" novalidate enctype="multipart/form-data">
                <div> 
                    <label for="title" class="form-label">Title</label>
                    <input name="listing[title]" placeholder="Enter Title" type="text" class="form-control" required>
                    <div class="valid-feedback">Looks Good</div>
                    <div class="invalid-feedback">Enter valid title</div>
                </div>
                <br>
                <div>
                    <label for="description" class="form-label">Description</label>
                    <textarea name="listing[description]" placeholder="Enter description" class="form-control" required></textarea>
                </div>
                <br>
                <div>
                    <label for="image" class="form-label">Upload Image</label>
                    <input name="image" type="file" class="form-control">
                </div>
                <br>
                <div class="row">
                    <div class="col-4">
                        <label for="price" class="form-label">Price</label>
                        <input name="listing[price]" placeholder="Enter price"class="form-control" required>
                        <div class="invalid-feedback">Enter valid price</div>
                    </div>
                    <br>
                    <div class="col-8">
                        <label for="country" class="form-label">Country</label>
                        <input name="listing[country]" placeholder="Enter country" type="text" class="form-control" required>
                        <div class="invalid-feedback">Enter valid country</div>
                    </div>
                </div>
                <br>
                <div>
                    <label for="location" class="form-label">Location</label>
                    <input name="listing[location]" placeholder="Enter location" type="text" class="form-control" required>
                    <div class="invalid-feedback">Enter valid Location</div>
                </div>
                <br>
                <button class="btn btn-dark add-btn">Save</button>
            </form>
        </div>
    </div>
</body>